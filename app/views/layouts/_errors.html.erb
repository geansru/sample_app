<% if @user.errors.any? %>
  <div class="row">
    <div class="col-lg-offset-3 col-lg-6">
      <div class="alert alert-dismissable alert-danger" id="error_explanation">
        <h4>Ошибка!</h4>
        <button type="button" class="close" data-dismiss="alert">×</button>
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li>* <%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>
