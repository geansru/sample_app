<div class="row">
  <div class="col-lg-4 col-lg-offset-4">
    <h2 class="text-center">Sign in!</h2>
    <% unless true #flash.empty? %>
      <% flash.each do |k,v| %>
        <div class="alert alert-<%=  k == 'alert' ? 'danger' : 'success' %>"><%= v%></div>
      <% end %>
    <% end %>
    <%= form_for @sign, url: { controller: "sessions", action: "create" }, html: {class: "form-horizontal" } do |f| %>
      <div class="form-group">
        <%= f.label :email, 'e-mail:', class: "col-lg-3 control-label"%>
        <div class="col-lg-9"> <%= f.text_field :email, class: "form-control" %> </div>
      </div>
      <hr />
      <div class="form-group">
        <%= f.label :password, "Пароль:", class: "col-lg-3 control-label" %>
        <div class="col-lg-9"> <%= f.password_field :password, class: "form-control" %> </div>
      </div>

      <hr />
      <div class="form-group ">
        <div class="col-lg-9 col-lg-offset-3"><%= f.submit "Sign in", class: "btn btn-success"%></div>
      </div>

    <% end %>
  </div>
</div>
